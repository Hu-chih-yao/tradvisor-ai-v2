@tailwind base;
@tailwind components;
@tailwind utilities;

/* 
  TRADVISOR AI - Editorial Luxury Design System
  Inspired by high-end editorial aesthetics with blue theme
*/

@import url('https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,500;0,600;1,400;1,500&family=Inter:wght@300;400;500;600;700&display=swap');

@layer base {
  :root {
    /* Core Palette - Refined Slate & White */
    --background: 0 0% 100%;
    --foreground: 222 20% 10%;

    --card: 0 0% 100%;
    --card-foreground: 222 20% 10%;

    --popover: 0 0% 100%;
    --popover-foreground: 222 20% 10%;

    /* Primary - Elegant Slate */
    --primary: 222 15% 12%;
    --primary-foreground: 0 0% 98%;

    /* Secondary - Soft Warm Gray */
    --secondary: 220 14% 96%;
    --secondary-foreground: 222 15% 12%;

    /* Muted - Editorial Gray */
    --muted: 220 14% 96%;
    --muted-foreground: 220 9% 46%;

    /* Accent - Blue (changed from pink/purple) */
    --accent: 213 94% 68%;
    --accent-foreground: 0 0% 100%;

    --destructive: 0 84% 60%;
    --destructive-foreground: 0 0% 98%;

    --border: 220 13% 91%;
    --input: 220 13% 91%;
    --ring: 222 15% 12%;

    --radius: 0.75rem;

    /* Glass Effects */
    --glass-bg: 0 0% 100% / 0.8;
    --glass-border: 0 0% 100% / 0.6;
    
    /* Feature Gradients - Blue Theme */
    --gradient-hero: linear-gradient(135deg, hsl(220 10% 96%) 0%, hsl(210 30% 92%) 100%);
    --gradient-feature-1: linear-gradient(135deg, hsl(210 85% 65%) 0%, hsl(220 70% 60%) 100%);
    --gradient-feature-2: linear-gradient(135deg, hsl(200 75% 70%) 0%, hsl(215 85% 62%) 100%);
    
    /* Shadows */
    --shadow-sm: 0 1px 2px hsl(222 20% 10% / 0.05);
    --shadow-md: 0 4px 12px hsl(222 20% 10% / 0.08);
    --shadow-lg: 0 10px 40px hsl(222 20% 10% / 0.12);
    --shadow-xl: 0 25px 80px hsl(222 20% 10% / 0.15);

    /* Sidebar */
    --sidebar-background: 220 14% 97%;
    --sidebar-foreground: 222 15% 25%;
    --sidebar-primary: 222 15% 12%;
    --sidebar-primary-foreground: 0 0% 98%;
    --sidebar-accent: 220 14% 94%;
    --sidebar-accent-foreground: 222 15% 12%;
    --sidebar-border: 220 13% 91%;
    --sidebar-ring: 213 94% 68%;

    /* Editorial Background */
    --bg-editorial: 220 20% 98%;
  }

  .dark {
    --background: 222 20% 6%;
    --foreground: 0 0% 95%;

    --card: 222 20% 8%;
    --card-foreground: 0 0% 95%;

    --popover: 222 20% 8%;
    --popover-foreground: 0 0% 95%;

    --primary: 0 0% 95%;
    --primary-foreground: 222 20% 10%;

    --secondary: 222 15% 15%;
    --secondary-foreground: 0 0% 95%;

    --muted: 222 15% 15%;
    --muted-foreground: 220 10% 60%;

    --accent: 213 94% 68%;
    --accent-foreground: 0 0% 100%;

    --destructive: 0 62% 30%;
    --destructive-foreground: 0 0% 95%;

    --border: 222 15% 18%;
    --input: 222 15% 18%;
    --ring: 0 0% 80%;
    
    --sidebar-background: 222 20% 8%;
    --sidebar-foreground: 220 10% 70%;
    --sidebar-primary: 213 94% 68%;
    --sidebar-primary-foreground: 0 0% 100%;
    --sidebar-accent: 222 15% 12%;
    --sidebar-accent-foreground: 0 0% 95%;
    --sidebar-border: 222 15% 15%;
    --sidebar-ring: 213 94% 68%;

    --bg-editorial: 222 20% 8%;
  }
}

@layer base {
  * {
    @apply border-border;
  }

  body {
    @apply bg-background text-foreground;
    font-family: 'Inter', system-ui, sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Playfair Display', Georgia, serif;
  }
}

@layer components {
  /* Glass Bar - Header/Footer */
  .glass-bar {
    @apply bg-white/80 backdrop-blur-xl border-b border-black/5 dark:bg-slate-900/80 dark:border-white/5;
  }

  /* Editorial Background */
  .bg-editorial {
    @apply bg-[hsl(var(--bg-editorial))];
  }

  /* Sidebar Background */
  .bg-sidebar {
    @apply bg-[hsl(var(--sidebar-background))];
  }

  /* Editorial Label */
  .editorial-label {
    @apply text-[11px] uppercase tracking-[0.15em] font-medium text-slate-400 dark:text-slate-500;
  }

  /* Editorial Divider */
  .editorial-divider {
    @apply h-px bg-gradient-to-r from-transparent via-slate-200 to-transparent dark:via-slate-700;
  }
  
  /* Hide scrollbar */
  .scrollbar-hide {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .scrollbar-hide::-webkit-scrollbar {
    display: none;
  }
}

@layer utilities {
  /* Fade In Animation */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  .animate-fadeIn {
    animation: fadeIn 0.5s ease-out forwards;
  }
  
  /* Serif font utility */
  .font-serif {
    font-family: 'Playfair Display', Georgia, serif;
  }

  /* Blue Mesh Gradient (changed from pink/purple) */
  .gradient-mesh {
    background: 
      radial-gradient(at 27% 37%, hsla(210, 85%, 75%, 1) 0px, transparent 50%),
      radial-gradient(at 97% 21%, hsla(220, 70%, 70%, 1) 0px, transparent 50%),
      radial-gradient(at 52% 99%, hsla(200, 75%, 80%, 1) 0px, transparent 50%),
      radial-gradient(at 10% 29%, hsla(215, 85%, 75%, 1) 0px, transparent 50%),
      radial-gradient(at 97% 96%, hsla(205, 80%, 82%, 1) 0px, transparent 50%),
      radial-gradient(at 33% 50%, hsla(195, 70%, 85%, 1) 0px, transparent 50%),
      radial-gradient(at 79% 53%, hsla(210, 75%, 80%, 1) 0px, transparent 50%);
    background-color: hsl(220, 20%, 98%);
  }

  .gradient-mesh-dark {
    background: 
      radial-gradient(at 27% 37%, hsla(210, 60%, 35%, 0.6) 0px, transparent 50%),
      radial-gradient(at 97% 21%, hsla(220, 55%, 35%, 0.6) 0px, transparent 50%),
      radial-gradient(at 52% 99%, hsla(200, 60%, 40%, 0.6) 0px, transparent 50%),
      radial-gradient(at 10% 29%, hsla(215, 60%, 35%, 0.6) 0px, transparent 50%),
      radial-gradient(at 97% 96%, hsla(205, 50%, 35%, 0.6) 0px, transparent 50%),
      radial-gradient(at 33% 50%, hsla(195, 50%, 35%, 0.6) 0px, transparent 50%),
      radial-gradient(at 79% 53%, hsla(210, 55%, 35%, 0.6) 0px, transparent 50%);
    background-color: hsl(222, 20%, 8%);
  }

  /* Subtle animated version */
  .gradient-mesh-animated {
    background-size: 400% 400%;
    animation: meshMove 25s ease infinite;
  }

  @keyframes meshMove {
    0%, 100% { background-position: 0% 50%; }
    25% { background-position: 50% 0%; }
    50% { background-position: 100% 50%; }
    75% { background-position: 50% 100%; }
  }

  /* Blue Hero Gradient */
  .gradient-hero-blue {
    background: 
      radial-gradient(at 100% 0%, hsla(210, 85%, 80%, 1) 0px, transparent 50%),
      radial-gradient(at 60% 10%, hsla(220, 70%, 78%, 1) 0px, transparent 50%),
      radial-gradient(at 50% 90%, hsla(200, 75%, 82%, 1) 0px, transparent 40%),
      radial-gradient(at 100% 100%, hsla(215, 80%, 82%, 1) 0px, transparent 50%),
      radial-gradient(at 0% 50%, hsla(205, 85%, 85%, 1) 0px, transparent 40%);
    background-color: hsl(220, 30%, 96%);
  }

  /* CJK Typography adjustments */
  .cjk-text {
    letter-spacing: 0.08em;
  }

  .cjk-hero {
    letter-spacing: 0.2em;
    line-height: 1.2;
    word-spacing: 0.1em;
  }

  .text-balance {
    text-wrap: balance;
  }
}

/* iOS Safe Area Support */
@supports (padding-bottom: env(safe-area-inset-bottom)) {
  .safe-area-bottom {
    padding-bottom: env(safe-area-inset-bottom);
  }
}

/* Prevent input zoom on iOS (font-size must be 16px+) */
@media (max-width: 768px) {
  input[type="text"],
  input[type="email"],
  input[type="search"],
  textarea {
    font-size: 16px !important;
  }
}

/* Additional component styles and animations */
@layer components {
  /* Glass Input */
  .glass-input {
    @apply border border-slate-200/40 bg-white/80 backdrop-blur-xl shadow-sm dark:border-slate-700/30 dark:bg-slate-800/40;
  }
}

@layer utilities {
  /* Additional animations */
  @keyframes float-gentle {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-8px); }
  }

  .animate-float-gentle {
    animation: float-gentle 3s ease-in-out infinite;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(12px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fadeInUp {
    animation: fadeInUp 0.6s ease-out forwards;
  }
}

@layer components {
  /* Glass Card */
  .glass-card {
    @apply bg-white/60 backdrop-blur-xl border border-white/30 dark:bg-slate-800/40 dark:border-slate-700/20;
  }
}

@layer utilities {
  /* Blue gradient mesh for login/hero backgrounds */
  .gradient-mesh-blue {
    background: 
      radial-gradient(at 100% 0%, hsla(210, 90%, 75%, 0.85) 0px, transparent 50%),
      radial-gradient(at 60% 10%, hsla(220, 80%, 70%, 0.8) 0px, transparent 50%),
      radial-gradient(at 50% 90%, hsla(200, 85%, 78%, 0.75) 0px, transparent 40%),
      radial-gradient(at 100% 100%, hsla(215, 85%, 76%, 0.8) 0px, transparent 50%),
      radial-gradient(at 0% 50%, hsla(205, 90%, 82%, 0.75) 0px, transparent 40%);
    background-color: hsl(220, 35%, 94%);
  }
}

@layer components {
  /* Glass Panel - similar to glass-card but optimized for plan progress */
  .glass-panel {
    @apply bg-white/50 backdrop-blur-md border border-slate-200/40 dark:bg-slate-800/30 dark:border-slate-700/30;
  }
}

@layer utilities {
  /* Scale In animation for plan progress */
  @keyframes scaleIn {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  .animate-scaleIn {
    animation: scaleIn 0.3s ease-out forwards;
  }
}
